@import "node_modules/highlight.js/styles/solarized-dark.css"

// Solarized colors
base03 =    #002b36;
base02 =    #073642;
base01 =    #586e75;
base00 =    #657b83;
base0 =     #839496;
base1 =     #93a1a1;
base2 =     #eee8d5;
base3 =     #fdf6e3;
yellow =    #b58900;
orange =    #cb4b16;
red =       #dc322f;
magenta =   #d33682;
violet =    #6c71c4;
blue =      #268bd2;
cyan =      #2aa198;
green =     #859900;


@font-face {
  font-family: 'mplus';
  src: url('./fonts/mplus-2p-medium.ttf');
  font-weight: 400;
}
@font-face {
  font-family: 'Baskerville';
  src: url('./fonts/LibreBaskerville-Regular.ttf');
  font-weight: 400;
}
@font-face {
  font-family: 'Fira Code';
  src: url('./fonts/FiraCode-Regular.woff2');
  font-weight: 400;
}

// Theme variables
bg_color = base02;
fg_color = base1;

article_font = 'Baskerville'
code_font = 'Fira Code'
title_font = 'mplus'

html {
  background-color: bg_color;
  color: fg_color;

  font: inherit;
  font-family: article_font;
  font-size: 20px;
  line-height: 40px;

  a {
    color: base2;
    &:visited {
      color: base0;
    }
    &:active {
      color: base3;
    }
  }

  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0;
    background-color: base02;

    header {
      width: 100%;
      display: flex;
      justify-content: space-between;
      position: sticky;
      top: -1px;
      background-color: bg_color;
      height: 48px;
      line-height: 48px;
      font-size: 24px;
      font-family: title_font;

      @media (max-width: 1081px) {
        height: 96px;
        line-height 96px;
      }

      .left {
        display: flex;
        justify-content: flex-start;

        svg {
          width: 48px;
          height: 48px;
          fill: fg_color;

          &>.lt {
            transition: transform 1s;
            transform: translate(58px, 16px) rotate(90deg);
          }
          &>.gt {
            transition: transform 1s;
            transform:  translate(7px, 80px) rotate(-90deg);
          }
          &>.slash {
            transition: transform 1s;
            transform: translate(13px, 82px) rotate(-110deg);
          }

          &:hover {
            .lt, .gt, .slash {
              transform: none;
            }
          }
          @media (max-width: 1081px) {
            width 96px;
            height: 96px;
          }

        }
        &>* {
          margin-right: 24px;
          @media (max-width: 1081px) {
            margin-right: 48px;
          }
        }
      }

      .right {
        &>* {
          margin-right: 24px;
        }
      }

    }

    main {
      max-width: 16.5cm;
      padding: 1.5rem;
      margin-left: 8px;
      margin-right: 8px;
      background-color: base02;
      box-shadow: 0px 8px 12px 4px alpha(base03, 0.3);

      @media (max-width: 1081px) and (min-width: 720px) {
        max-width 95vw;
      }
      @media (max-width 720px) {
        max-width 100vw;
        padding: 8px;
      }
      @media (max-width: 500px) {
        margin: 0;
      }

      h1, h2, h3 {
        font-family: title_font;
        font-weight: 500;
      }
      article {
        code {
          font-family code_font;
        }
      }
    }

    footer {
      display: flex;
      justify-content: center;
      font-size: 12px;
      color: base01;
      margin: 48px 0;
    }
  }
}

