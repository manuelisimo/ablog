@import "node_modules/highlight.js/styles/solarized-light.css"

// Solarized colors
base03 =    #002b36;
base02 =    #073642;
base01 =    #586e75;
base00 =    #657b83;
base0 =     #839496;
base1 =     #93a1a1;
base2 =     #eee8d5;
base3 =     #fdf6e3;
yellow =    #b58900;
orange =    #cb4b16;
red =       #dc322f;
magenta =   #d33682;
violet =    #6c71c4;
blue =      #268bd2;
cyan =      #2aa198;
green =     #859900;

bgcolor = base2;
fgcolor = base03;

@font-face {
  font-family: 'mplus';
  src: url('./fonts/mplus-2p-medium.ttf');
  font-weight: 400;
}
@font-face {
  font-family: 'Baskerville';
  src: url('./fonts/LibreBaskerville-Regular.ttf');
  font-weight: 400;
}
@font-face {
  font-family: 'Fira Code';
  src: url('./fonts/FiraCode-Regular.woff2');
  font-weight: 400;
}

html {
  background-color: bgcolor;
  color: fgcolor;

  font: inherit;
  font-family: "Baskerville";
  font-size: 20px;
  line-height: 36px;

  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0;

    header {
      width: 100%;
      display: flex;
      justify-content: space-between;
      position: sticky;
      top: -1px;
      background-color: bgcolor;
      height: 48px;
      line-height: 48px;
      box-shadow: 0px 8px 12px 4px alpha(base1, 0.3);

      @media (max-width: 1081px) {
        height: 96px;
        line-height 96px;
      }

      .left {
        display: flex;
        justify-content: flex-start;

        .logo {
          width: 48px;
          height: 48px;

          @media (max-width: 1081px) {
            width 96px;
            height: 96px;
          }
        }
        &>* {
          margin-right: 24px;
          @media (max-width: 1081px) {
            margin-right: 48px;
          }
        }
      }

      .right {
        &>* {
          margin-right: 24px;
        }
      }

    }

    main {
      max-width: 16.5cm;
      padding: 1.5rem;
      margin-left: 8px;
      margin-right: 8px;
      box-shadow: 0px 8px 12px 4px alpha(base1, 0.3);

      @media (max-width: 1081px) and (min-width: 720px) {
        max-width 95vw;
      }
      @media (max-width 720px) {
        max-width 100vw;
        padding: 8px;
      }
      @media (max-width: 500px) {
        margin: 0;
      }

      h1 {
        font-weight: 500;
      }
      article {
        code {
          font-family "Fira Code"
        }
      }
    }

    footer {
      display: flex;
      justify-content: center;
      font-size: 12px;
      color: base01;
      margin: 48px 0;
    }
  }
}

