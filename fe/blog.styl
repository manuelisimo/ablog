@import "node_modules/highlight.js/styles/solarized-light.css"

base03 =    #002b36;
base02 =    #073642;
base01 =    #586e75;
base00 =    #657b83;
base0 =     #839496;
base1 =     #93a1a1;
base2 =     #eee8d5;
base3 =     #fdf6e3;
yellow =    #b58900;
orange =    #cb4b16;
red =       #dc322f;
magenta =   #d33682;
violet =    #6c71c4;
blue =      #268bd2;
cyan =      #2aa198;
green =     #859900;

bgcolor = base2;
fgcolor = base03;

@font-face {
  font-family: 'mplus';
  src: url('./fonts/mplus-2p-medium.ttf');
  font-weight: 400;
}
@font-face {
  font-family: 'Baskerville';
  src: url('./fonts/LibreBaskerville-Regular.ttf');
  font-weight: 400;
}
@font-face {
  font-family: 'Fira Code';
  src: url('./fonts/FiraCode-Regular.woff2');
  font-weight: 400;
}

html {
  background-color: bgcolor;
  color: fgcolor;

  font-size:100%;
  font:inherit;
  font-family: "Baskerville";
  font-size: 22px;
  line-height: 1.6em;

  header {
    display: flex;
    justify-content: space-between;
    position: sticky;
    top: -1px;
    background-color: bgcolor;
    line-height: 48px;

    .left {
      display: flex;
      justify-content: flex-start;

      .logo {
        width: 48px;
        height: 48px;
      }
      &>* {
        margin-right: 24px;
      }
    }

  }
  main {
    h1 {
      font-weight: 500;
    }
    article {
      code {
        font-family "Fira Code"
      }
    }
    max-width: 70ch;
    padding: 1.5rem;
    margin: auto;
  }
  footer {
    display: flex;
    justify-content: center;
    font-size: 12px;
    color: base01;
  }
}

